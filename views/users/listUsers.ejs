<%- include('../partials/header') %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary fw-bold">Users</h2>
    <a href="/user/add" class="btn btn-success btn-lg shadow-sm">
      <i class="bi bi-plus-circle me-2"></i> Add User
    </a>
  </div>

  <div class="table-responsive shadow-sm rounded border">
    <table class="table table-striped table-hover align-middle mb-0 bg-white">
      <thead class="table-dark text-uppercase">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col" class="text-center" style="width: 160px;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td class="fw-semibold"><%= user.name %></td>
            <td><%= user.email %></td>
            <td class="text-center">
              <a href="/user/edit/<%= user._id %>" 
                 class="btn btn-sm btn-warning me-2 d-inline-flex align-items-center" 
                 title="Edit User">
                <i class="bi bi-pencil-square me-1"></i> Edit
              </a>
              <a href="/user/delete/<%= user._id %>" 
                 class="btn btn-sm btn-danger d-inline-flex align-items-center" 
                 title="Delete User" 
                 onclick="return confirm('Are you sure you want to delete this user?');">
                <i class="bi bi-trash me-1"></i> Delete
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
